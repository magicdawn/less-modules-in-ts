{
  "include": ["src/**/*", "demo/**/*"],
  "compilerOptions": {
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2019",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "ts-node": {
    "swc": true
  }
}
